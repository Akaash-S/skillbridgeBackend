# Google Cloud Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/firebase-service-account.json

# API Keys
GEMINI_API_KEY=your-gemini-api-key
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_APP_KEY=your-adzuna-app-key

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# CORS Configuration
CORS_ORIGINS=https://skillbridge.app,https://www.skillbridge.app

# Port Configuration (GCP uses PORT environment variable)
PORT=8080

# Database Configuration (if using Cloud SQL)
# DB_HOST=your-cloud-sql-host
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
# DB_NAME=skillbridge

# Redis Configuration (if using Memorystore)
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password